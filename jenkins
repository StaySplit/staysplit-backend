pipeline {
    agent any
    tools {
        jdk 'jdk17'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/StaySplit/staysplit-backend.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build' // 또는 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
    }
}
